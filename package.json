{
	"name": "oi-wiki-vscode",
	"displayName": "OI Wiki",
	"description": "在 VS Code 中搜索并查看 OI-wiki",
	"icon": "asset/icon.png",
	"homepage": "https://github.com/OI-wiki/OI-wiki-vscode",
	"publisher": "oi-wiki-team",
	"version": "0.1.4",
	"engines": {
		"vscode": "^1.42.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/OI-wiki/OI-wiki-vscode.git"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.OIWiki"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.OIWiki",
				"title": "搜索 OI-wiki",
				"description": "搜索 OI-wiki",
				"category": "OI-wiki"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.1",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.42.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.18.0",
		"@typescript-eslint/eslint-plugin": "^2.18.0",
		"glob": "^7.1.6",
		"mocha": "^7.0.1",
		"typescript": "^3.7.5",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"axios": "^0.19.2"
	}
}
